aside.sidebar.js-menu-container
	div
		a.sidebar__logo-link(href="./index.html")
			svg.sidebar__logo-icon(width="37" height="37")
				use(href="./images/icons.svg#icon-logo")
			div
				span.sidebar__logo-name Dashboard
				span.sidebar__crm-version v.01

		nav
			ul.sidebar__menu
				li
					a.sidebar__dashboard-link.toastr(href="#")
