mixin sidebarMenu(icon, name, link, index)
	li
		a.sidebar__dashboard-link.update-class(data-index=index href=link)
			svg.sidebar__dashboard-link-icon(class=(index === 1 || index === 2) ? 'reverse' : '' width="24" height="24")
				use(href= icon)
			| #{name}
			svg.sidebar__dashboard-link-icon-chevron(width="16" height="16")
				use(href="./images/icons.svg#icon-chevron-right")